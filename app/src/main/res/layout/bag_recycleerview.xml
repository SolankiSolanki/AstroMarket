<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_neumo_removed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linear_bag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_wishlist"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_bag"
                        android:layout_width="100dp"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint1_bag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_recyclerview_bag"
                                android:layout_width="100dp"
                                android:layout_height="90dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:scaleType="centerCrop"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/evileye" />
                            <View
                                android:layout_width="110dp"
                                android:layout_height="90dp"
                                app:layout_constraintRight_toRightOf="@id/img_recyclerview_bag"
                                app:layout_constraintLeft_toLeftOf="@id/img_recyclerview_bag"
                                app:layout_constraintTop_toTopOf="@id/img_recyclerview_bag"
                                android:background="@drawable/img_gradient" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <CheckBox
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignStart="@id/cardview_bag"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/check_bag"
                            android:button="@null" />

                    </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/linear2_bag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/cardview_bag"
                    app:layout_constraintRight_toRightOf="@id/linear4_bag"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evil Eye for Relationship"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="13sp"
                        android:textColor="#16739D"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Original MRP:  "
                            android:textSize="7sp"
                            android:textColor="#C8C8C8"
                            android:ellipsize="end"
                            android:maxLines="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rupee_symbol_bag"
                            android:text=" 1500"
                            android:textSize="7sp"
                            android:drawableTint="#C8C8C8"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#C8C8C8"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Offer MRP: "
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:textColor="#707070"
                            android:maxLines="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawableTint="#707070"
                            android:text="â‚¹ 1250 "
                            android:textSize="12sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#707070"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/text_16_trendwears"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16% "
                                android:textSize="12sp"
                                android:textColor="	#008000"/>

                            <TextView
                                android:id="@+id/text_off_trendwears"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OFF"
                                android:textSize="12sp"
                                android:textColor="#008000" />

                        </LinearLayout>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery by "
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:textColor="#C8C8C8"
                            android:maxLines="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 Jan, 2022"
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:textColor="@color/DarkGrey"
                            />



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear4_bag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/shape_pluse_min"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="bottom">
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:weightSum="3"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="-"
                            android:background="@drawable/pluse_minus_shape"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="0"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/pluse_minus_shape"
                            android:text="+"
                            android:textColor="@color/black"/>






                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>