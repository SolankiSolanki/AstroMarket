<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img_product_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/illuminatedtarot_product_list_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/gemstone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="-4dp"
                    app:layout_constraintRight_toRightOf="@id/illuminatedtarot_product_list_img"
                    app:layout_constraintLeft_toLeftOf="@id/illuminatedtarot_product_list_img"
                    app:layout_constraintTop_toTopOf="@id/illuminatedtarot_product_list_img"
                    android:background="@drawable/img1_gradient"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/linear1_productlist"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/shape_product_list"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:id="@+id/text_16_product_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16% "
                    android:textColor="#008000"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/text_off_product_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textColor="	#008000"
                    android:textSize="10sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Original South Sea Pearl -15.59 Carat (17.25 Ratti)"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <RatingBar
            android:id="@+id/ratingbar"
            android:progressTint="#006497"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3.5"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rupee_text2_product_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,250"
                android:textColor="#006497"
                android:drawablePadding="0dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/strike_text3_product_list_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:gravity="bottom"
                android:text="@string/strike"
                android:textColor="#A3A3A3" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>